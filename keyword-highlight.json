{
  "keyword-highlight": {
    "enabled": true,
    "applyTo": {
      "output": true,
      "input": false // input will conflict with command syntax highlighting.
    },
    "rules": [
      {
        "name": "Errors and Failures",
        "enabled": true,
        "scope": "output",
        "matchType": "regex",
        "pattern": "(?i)\\b(error|failed|failure|panic|segfault|exception|denied|permission denied|no such file|not found)\\b",
        "style": {
          "foreground": "#FF453A",
          "fontStyle": "normal"
        }
      },
      {
        "name": "Warnings",
        "enabled": true,
        "scope": "output",
        "matchType": "regex",
        "pattern": "(?i)\\b(warn|warning|deprecated|timeout|retry|unreachable|throttl)\\w*\\b",
        "style": {
          "foreground": "#FF9F0A",
          "fontStyle": "normal"
        }
      },
      {
        "name": "Success / Healthy States",
        "enabled": true,
        "scope": "output",
        "matchType": "regex",
        "pattern": "(?i)\\b(success|successful|ok|okay|done|completed|running|started|listening|ready|connected|passed)\\b",
        "style": {
          "foreground": "#34C759",
          "fontStyle": "normal"
        }
      },
      {
        "name": "Network / Connectivity",
        "enabled": true,
        "scope": "output",
        "matchType": "regex",
        "pattern": "(?i)\\b(connection (refused|reset)|timed out|timeout|host unreachable|network is unreachable|broken pipe|tls|ssl)\\b",
        "style": {
          "foreground": "#0A84FF",
          "fontStyle": "normal"
        }
      }
    ]
  }
}